{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "enabledManagers": [
    "github-actions"
  ],
  "ignoreTests": true,
  "packageRules" : [
    {
      "matchPackageNames": ["renovatebot/github-action"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
